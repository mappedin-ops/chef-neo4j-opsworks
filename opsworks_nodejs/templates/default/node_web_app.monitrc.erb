check host node_web_app_<%= @application_name %> with address 127.0.0.1
  every 10 cycles
  start program = "/bin/sh -c 'mv /mnt/var/log/server.log /mnt/var/log/server.log.`date +%Y%m%d-%H%M%S`; cd <%= @deploy[:deploy_to] %>/current; /usr/bin/env NODE_PATH=<%= @deploy[:deploy_to] %>/current/node_modules:<%= @deploy[:deploy_to] %>/current /usr/local/bin/node <%= @monitored_script %> > server.log'"
  stop program  = "/usr/bin/pkill -f 'node <%= @monitored_script %>'"
  if failed port 80 protocol HTTP
    request /
    with timeout 10 seconds
    then alert
